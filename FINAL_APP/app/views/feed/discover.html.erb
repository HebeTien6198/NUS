

</head>

<body id="feed">
  <%= render "/layouts/header"%>

  <!--------------------------------------------------------BODY------------------------------------------------------------------>
  <main class="feed-body">
    <hr>
    <div class="row">
      <!---------------Left tab from Layput-------------->
      <%= render "/layouts/leftTab"%>
      <!------------------End left tab------------------->

      <div class="col-md-8 col-xs-8 photo-body">
        <!----------------------------------HEADER BUTTON----------------------------------------->
        <div class="row photo-body">
          <div class="col">
            <button id="photo-button" href="#photo" type="button" role="tab" data-toggle="tab"
              class="btn btn-primary pull-right photo-button">PHOTO</button>
          </div>
          <div class="col">
            <button id="album-button" href="#album" type="button" role="tab" data-toggle="tab"
              class="btn btn-primary pull-left album-button">AlBUM</button>
          </div>
        </div>
        <br>
        <!-------------------------------------PHOTO---------------------------------------------->
        <!----------------------Photo Tab--------------------->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="photo">
            <div class="wrap photo-body">
              <!------------------------A photo----------------------------------->
              <div></div>
              <%for photo in @photos%>
              <div class="photo-container shadow-sm rounded">
                <div class="row">
                  <div class="col">
                    <img src="<%=photo.image.url%>" class="photo-review-image">
                  </div>
                  <div class="col">
                    <!--Follow Button-->
                    <%if @followings[photo.User.id] == true%>
                      <button class="btn btn-warning follow" followed="true" follower_id="<%=@user.id%>", following_id="<%=photo.User.id%>"
                        style="border-radius: 50%; position: absolute; top:0; right:15px;">following</button>
                    <%else%>
                      <button class="btn btn-outline-warning follow" followed="false" follower_id="<%=@user.id%>", following_id="<%=photo.User.id%>"
                        style="border-radius: 50%; position: absolute; top:0; right:15px;">follow</button>
                    <%end%>
                    <div class="review-header">
                      <!------Avatar------>
                      <img src="<%=photo.User.avatar%>" class="header-img">
                      <!------User's Name------>
                      <%= link_to photo.User.firstName,  info_url(photo.User.id) %>


                    </div>
                    <div class="review-body">
                      <p class="header-text"><%=photo.title%></p>
                      <p><%=photo.des%></p>
                    </div>
                    <div class="review-footer">
                      <i class="fas fa-heart"><%=photo.likes.size%></i>
                      <div class="date ml-auto"><%=photo.created_at.strftime("%I:%M%P %m/%d/%Y")%>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <%end%>
              <!------------------------END PHOTO------------------------------------------>
            </div>
          </div>
          <!----------------------Album Tab--------------------->
          <div role="tabpanel" class="tab-pane" id="album">cc</div>
        </div>
      </div>
      <div class="col-md-2 col-xs-2">
        right
      </div>
    </div>


  </main>
</body>
<!-- Java Script -->

</html>