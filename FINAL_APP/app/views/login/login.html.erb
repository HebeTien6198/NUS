
    <body>
        <!---------------------------------------------------------HEADER---------------------------------------------------------------------->
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container">
                <!---------------------------Logo------------------------------->
                <a class="navbar-brand" href="#">Instagram</a>
                

                <!----------------------------Search Bar------------------------------------->
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search">
                  </form>
                   <%= link_to "English", locale:"en" %>
                <%= link_to "Vietnamese", locale:"vi" %>
                  <!--------------------------------Info------------------------------------------->
                <div class="collapse navbar-collapse " id="navbarTogglerDemo02">
                  <ul class="navbar-nav ml-auto mt-2 mt-lg-0 ">
                    
                    <li class="nav-item">
                      <%= link_to t('register'), register_url, class: "nav-link", :"data-turbolinks" => false %>
                    </li>
                    </li>
                  </ul>                  
                </div>
                </div>
              </nav>
        </header>

        <!--------------------------------------------------------BODY------------------------------------------------------------------>
        <main>
            <hr>
            
        
            <div class="container form-body">
                    <h1 class="text-header text-primary"><%=t('login')%></h1>
                </br>
                <!--------------------Login Message---------------------->
                <%= @message %>
                <div class="is-invalid">
                  <div class="invalid-feedback"> sadasd <%=@message%> </div>
                </div>
                <div class="row">
                <div class="col-md-4"></div>
                    <!----------------------------------Login Form-------------------------------------------------->
                    <%=form_tag('/login', method: :post, class: "col-md-4") do%> 
                        <div class="form-group">
                            <input type="email" name="User[email]" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Your Email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <input type="password" name="User[password]" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                        
                        <a href="#" class="text-center">Fogot password?</a>
                        <br>
                        <%= link_to t('register'), register_url, class: "nav-link", :"data-turbolinks" => false %>
                        <br />
                        <br />
                    <%end%>
                <div class="col-md-4"></div>
                </div>
            </div>
        </main>
    </body>
</html>